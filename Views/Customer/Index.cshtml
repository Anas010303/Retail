@model IEnumerable<ABC_Retail.Models.CustomerProfile>

@{
    ViewData["Title"] = "Customer Profiles";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <a class="btn btn-primary" href="@Url.Action("Create", "Customer")"><i class="fas fa-plus"></i> Add New Customer</a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var profile in Model)
                    {
                        <tr>
                            <td>@profile.Name</td>
                            <td>@profile.Email</td>
                            <td>@profile.Phone</td>
                            <td>
                                <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = profile.Id })"><i class="fas fa-edit"></i> Edit</a>
                                <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = profile.Id })"><i class="fas fa-trash"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
