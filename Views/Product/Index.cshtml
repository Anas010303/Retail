@model IEnumerable<ABC_Retail.Models.ProductImage>

@{
    ViewData["Title"] = "Product Images";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Product Images</h1>
            <div class="card">
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="row">
                            @foreach (var image in Model)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card">
                                        <img src="@image.Url" class="card-img-top" alt="Product Image" />
                                        <div class="card-body">
                                            <h5 class="card-title">@image.Name</h5>
                                            <p class="card-text">Uploaded on: @image.UploadDate.ToString("MMMM dd, yyyy")</p>
                                            <a href="@image.Url" class="btn btn-primary" target="_blank">View Full Size</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info" role="alert">
                            No product images found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
