@model IEnumerable<string>

@{
    ViewData["Title"] = "Contracts & Logs";
}

<h2 class="mb-4">Upload Contracts and Logs</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="UploadFile" method="post" enctype="multipart/form-data">
            <div class="input-group mb-3">
                <input type="file" name="file" class="form-control" aria-label="Upload" required>
                <button class="btn btn-primary" type="submit">Upload File</button>
            </div>
        </form>
    </div>
</div>

<h4>Uploaded Files</h4>

@if (Model != null && Model.Any())
{
    <ul class="list-group">
        @foreach (var fileName in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @fileName
                <button class="btn btn-outline-danger btn-sm">Delete</button>
            </li>
        }
    </ul>
}
else
{
    <p class="text-muted">No files have been uploaded yet.</p>
}
